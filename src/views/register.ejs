<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="/css/login.css">
        <link rel="stylesheet" href="/css/header.css">
        <link rel="stylesheet" href="/css/normalize.css">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
    rel="stylesheet" />
    </head>
    
    <%- include ("./partials/header") %> 

    <body>
    <h2 style="text-align: center">Ingres치 tus datos para registarte</h2>
    <div class="form-container">
        <% if (locals.errors && errors.length > 0) { %>
            <% errors.forEach(error => { %>
                <p class="feedback"> <%= error.msg %></p>
            <% }) %>
        <% } %>
        
        
        <form action="/users/register" method="POST" enctype="multipart/form-data" >
            <div class="element-form">
                <label>Nombre completo:</label>
                <input type="text" name="nombreUsuario">
            </div>
            <div class="element-form">
                <label>DNI:</label>
                <input type="text" name="dniUsuario">
            </div>
            <div class="element-form">
                <label>Categoria de usuario:</label>
                <select name="categoria">
                    <option value=0 selected>Est치ndar</option>
                    <option value=1>Administrador</option>
                </select>
            </div>
            <div class="element-form">
                <label>Correo electr칩nico:</label>
                <input type="email" name="emailUsuario">
            </div>
            <div class="element-form">
                <label>Contrase침a:</label>
                <input type="password" name="passwordUsuario">
            </div>
            <div class="element-form">
                <label>Imagen de perfil:</label>
                <input type="file" name="avatar" accept=".jpg">
            </div>
            <button type="submit" class="element-form">Registrarme</button>
            <button type="reset" class="element-form">Borrar</button>               
        </form>
    </div>
    </body>
</html>